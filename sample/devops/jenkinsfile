pipeline {
    agent { 
    	node {
 			label 'RaguAWS'
    		 }
 	}
    stages {
    	stage('SCM Checkout'){
    	    steps{
    	    	git credentialsId: 'ragugithub', url: 'https://github.com/Ragutech/spring-boot-rest-example.git'
    	    }
    	    
    	}
    	stage('Security Gate'){
    	    
    	    parallel{
    	        
    	        stage('Static Code Analysis'){
    	        
    	        	steps{
    	        	
    	        		echo 'Performing Static Code Analysis'
    	        	    
    	        	}

    	                     
    	                     
    	                     
    	        }

				stage('Fortify Vulnerability Scan'){
				
					steps{
				
					echo 'Performing Fortify Vulnerability Scan'
					
					}
    	                          
    	        }
    	        
    	        stage('API Security Scan'){
    	        
    	        	steps{
    	        
    	        	echo 'Performing API Security Scan'
    	        	
    	        	}
    	        
    	                          
    	        }
    	        
    	    }

    	    
    	    
    	}

        stage('Build') {
            steps {
                sh 'python --version'
            }
        }
    }
}